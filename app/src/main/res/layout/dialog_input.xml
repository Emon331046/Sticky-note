<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_option_LinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="320dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingEnd="5dp"
    android:background="#D8F692"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/color_code_view1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/colorbutton1"
            android:layout_marginEnd="10dp"
            android:textSize="0dp"
            android:text="1" />
        <Button
            android:id="@+id/color_code_view2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:text="1"
            android:textSize="0dp"
            android:background="@drawable/colorbutton2"/>
        <Button
            android:id="@+id/color_code_view3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/colorbutton3"
            android:layout_marginEnd="10dp"
            android:textSize="0dp"
            android:text="1" />
        <ImageButton
            android:id="@+id/save_note"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_icons8_save" />
        <ImageButton
            android:id="@+id/cancel_note"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_icons8_delete"/>

    </LinearLayout>

           <EditText
               android:id="@+id/full_note_description"
               android:layout_width="match_parent"
               android:layout_height="fill_parent"
               android:inputType="text|textMultiLine"
               android:gravity="top"
               android:background="@null"
               android:hint="write your note ..."/>

</LinearLayout>
